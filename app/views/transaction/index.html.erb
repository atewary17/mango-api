<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Date</th>
      <th>Store</th>
      <th>Town</th>
      <th>Store code</th>
      <th>country</th>
      <th>user</th>
      <th>category</th>
      <th>sale</th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
    <tr>      
      <td><%= radio_button_tag :money_receipt_picked, sale.id, nil %></td>
      <td><%= sale.date.strftime("%d/%m/%y") %></td>
      <td><%= sale.store %></td>
      <td><%= sale.town %></td>
      <td><%= sale.store_code %></td>
      <td><%= sale.country %></td>
      <td><%= sale.user.email %></td>
      <td><%= sale.category %></td>
      <td><%= sale.sale %></td>
    </tr>
    <% end %>
  </tbody>
</table>